@{
    ViewData["Title"] = "System Reports";
}

<!-- Bootstrap CSS CDN -->
<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

<style>
    body {
        background: #f1f4f9;
    }

    .sidebar {
        height: 100vh;
        background-color: #343a40;
        color: white;
        padding-top: 2rem;
        position: fixed;
        width: 240px;
    }

        .sidebar a {
            color: white;
            text-decoration: none;
            display: block;
            padding: 1rem 1.5rem;
            transition: background 0.2s;
        }

            .sidebar a:hover {
                background-color: #495057;
            }

    .main-content {
        margin-left: 260px; /* Width of sidebar + spacing */
        padding: 2rem;
    }

    .card {
        border-radius: 1rem;
    }

    .table th, .table td {
        vertical-align: middle;
    }

    .table-dark {
        background-color: #343a40;
        color: white;
    }
</style>

<div class="sidebar">
    <h4 class="text-center mb-4">Admin Panel</h4>
    <a href="/Admin/Dashboard"><i class="bi bi-speedometer2 me-2"></i> Admin Dashboard</a>
    <a href="/Admin/ManageUsers"><i class="bi bi-person-gear me-2"></i> Manage Users</a>
    <a href="/Admin/ManageVendors"><i class="bi bi-briefcase me-2"></i> Manage Vendors</a>
    <a href="/Admin/SystemReports"><i class="bi bi-bar-chart-line me-2"></i> View Reports</a>
</div>

<div class="main-content">
    <div class="container my-5">
        <h1 class="text-center mb-4">System Reports</h1>

        <div class="row">
            <div class="col-md-6">
                <div class="card shadow-sm mb-4 p-3">
                    <h4>User Statistics</h4>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">Couples: <strong>@ViewBag.CoupleCount</strong></li>
                        <li class="list-group-item">Planners: <strong>@ViewBag.PlannerCount</strong></li>
                        <li class="list-group-item">Admins: <strong>@ViewBag.AdminCount</strong></li>
                    </ul>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card shadow-sm mb-4 p-3">
                    <h4>Wedding Statistics</h4>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">Total Weddings: <strong>@ViewBag.WeddingCount</strong></li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="card shadow-sm p-3 mt-4">
            <h4>Vendor Statistics by Category</h4>
            <table class="table table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>Category</th>
                        <th>Number of Vendors</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in ViewBag.VendorSummary)
                    {
                        <tr>
                            <td>@item.Category</td>
                            <td>@item.Count</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
