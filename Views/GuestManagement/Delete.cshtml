@model DreamDay.Models.Guest

@{
    ViewData["Title"] = "Delete Guest";
}

<div class="container my-5">
    <h1 class="text-center mb-4">Delete Guest</h1>

    <div class="alert alert-danger text-center">
        <h4>Are you sure you want to delete this guest?</h4>
        <p><strong>@Model.Name</strong> (@Model.Email)</p>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="GuestId" />
        <div class="text-center">
            <button type="submit" class="btn btn-danger">Delete</button>
            <a href="/GuestManagement" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
