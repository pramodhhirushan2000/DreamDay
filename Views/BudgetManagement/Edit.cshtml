@model DreamDay.Models.BudgetItem

@{
    ViewData["Title"] = "Edit Budget Item";
}

<div class="container my-5">
    <h1 class="text-center mb-4">Edit Budget Item</h1>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="BudgetItemId" />
        <input type="hidden" asp-for="WeddingId" />

        <div class="mb-3">
            <label asp-for="Category" class="form-label">Category</label>
            <input asp-for="Category" class="form-control" required />
        </div>

        <div class="mb-3">
            <label asp-for="EstimatedCost" class="form-label">Estimated Cost ($)</label>
            <input asp-for="EstimatedCost" class="form-control" type="number" step="0.01" required />
        </div>

        <div class="mb-3">
            <label asp-for="ActualCost" class="form-label">Actual Cost ($)</label>
            <input asp-for="ActualCost" class="form-control" type="number" step="0.01" />
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-dark">Save Changes</button>
            <a href="/BudgetManagement" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
