@model DreamDay.Models.BudgetItem

@{
    ViewData["Title"] = "Delete Budget Item";
}

<div class="container my-5">
    <h1 class="text-center mb-4">Delete Budget Item</h1>

    <div class="alert alert-danger text-center">
        <h4>Are you sure you want to delete this budget item?</h4>
        <p><strong>@Model.Category</strong> - Estimated: $@Model.EstimatedCost</p>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="BudgetItemId" />
        <div class="text-center">
            <button type="submit" class="btn btn-danger">Delete</button>
            <a href="/BudgetManagement" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
