@model DreamDay.Models.TimelineEvent

@{
    ViewData["Title"] = "Delete Timeline Event";
}

<div class="container my-5">
    <h1 class="text-center mb-4">Delete Timeline Event</h1>

    <div class="alert alert-danger text-center">
        <h4>Are you sure you want to delete the event "<strong>@Model.Title</strong>" scheduled at <strong>@Model.EventTime.ToString("hh:mm tt")</strong>?</h4>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="EventId" />
        <button type="submit" class="btn btn-danger">Yes, Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
